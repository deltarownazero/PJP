static def numbersFunction( number){
    switch(number){
        case '0':
            return 'zero '
        case '1':
            return 'jeden '
        case '2':
            return 'dwa '
        case '3':
            return 'trzy '
        case '4':
            return 'cztery '
        case '5':
            return 'piec '
        case '6':
            return 'szesc '
        case '7':
            return 'siedem '
        case '8':
            return 'osiem '
        case '9':
            return 'dziewiec '
        default:
            return 'ups'
    }
}

